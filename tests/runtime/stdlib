NAME assert_macro
PROG BEGIN { assert(false, "My error message"); }
EXPECT stdlib/base.bt:5:5-37: ERROR: assert failed: My error message
WILL_FAIL

NAME ppid_macro
PROG BEGIN { printf("SUCCESS %d\n", ppid(curtask)); exit(); }
EXPECT_REGEX SUCCESS [0-9][0-9]*

NAME stdint_macro
RUN {{BPFTRACE}} -e 'BEGIN { printf("SUCCESS %zu\n", UINTPTR_MAX); exit(); }' --include stdint.h
EXPECT_REGEX SUCCESS [0-9][0-9]*

NAME limits_macro
RUN {{BPFTRACE}} -e 'BEGIN { printf("SUCCESS %zu\n", UINT_MAX); exit(); }' --include limits.h
EXPECT_REGEX SUCCESS [0-9][0-9]*
