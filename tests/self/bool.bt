test:bool_logical_not_literals
{
  if ((!0) != true || (!10) != false) {
    return 1;
  }
}

test:bool_logical_not_variable
{
  $x = 0;
  if ((!$x) != true) {
    return 1;
  }
}

test:complex_bool_logical
{
  $a = 100000;
  $b = 0;
  $c = $a > $b;
  $d = $a && $b;
  $e = $c || $d;
  $f = (uint64)$c;
  if ($c != true || $d != false || $e != true || $f != 1) {
    return 1;
  }
}

test:bool_as_map_keys_and_values
{
  @bkv[true] = false;
  @bkv[false] = true;
  if (@bkv[true] != false || @bkv[false] != true) {
    return 1;
  }
}
